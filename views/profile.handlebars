<div class='container'>
  <div class='row'>
    <div class='col-auto'>
      <h2 class='username-heading'>Welcome, {{fname}}!</h2>
    </div>
  </div>
</div>
<div class='pin_container'>
  {{#if reviews.length}}
  {{#each reviews as |product|}}
  <div class='card card_small'>
    <div id='pin_title{{product.id}}' data-brand='{{product.brand}}'></div>
    <div id='pin_product_type{{product.id}}' data-type='{{product.type}}'></div>
    <div id='pin_product_price{{product.id}}' data-price='{{product.price}}'></div>
    <div id='pin_description{{product.id}}' data-descr='{{product.description}}'></div>
    <div class='pin_modal'>
      <div class='modal_foot'>
        <!-- Button trigger modal -->
        <button type="button" class="modal-read-more-btn" data-bs-toggle="modal"
          data-bs-target="#product-{{product.id}}">
          See Review
        </button>

        <div class='destination'>
          <div class='pint_mock_icon_container'>
            <div>
              <a href='{{product.link}}' target='_blank'><img src='../assets/upper-right-arrow.png' alt='destination'
                  class='pint_mock_icon' id="pint_mock_icon" /></a>
            </div>
          </div>
        </div>

      </div>
      <div class='pin_image'><img src='/assets/Landing-page.jpg' class='pin_max_height' />
      </div>
    </div>
  </div>
  <div class="modal fade" id="product-{{product.id}}" tabindex="-1" role="dialog"
    aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">{{product.brand}}</h5>
        </div>
        <div class="modal-body">
          <div class='modal-pin-image'><img src='/assets/Landing-page.jpg' id='modal-pin-image' />
          </div>
          <div id='pin_description{{product.id}}'>
            <p class="modal-type">{{product.type}}</p>
            <p class="modal-desc">{{product.description}}</p>
            <p class="modal-price">${{product.price}}</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
      <div class='pin_image'><img src='{{c_url}}' class='pin_max_width' />
      </div>


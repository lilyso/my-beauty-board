{{! Welcome container }}
<div class='container'>
  <div class='row align-items-center'>
    <div class='col-12 col-md-auto'>
      <h2 class='username-heading text-center text-md-left'>Welcome,
        {{fname}}!</h2>
    </div>
    <div class='col-12 pt-4 pt-md-0 col-md text-center text-md-right'>
      {{! Add new pin button }}
      <div class='add_pin new-item'>
        <img src='../assets/add.png' alt='add_pin' class='pint_mock_icon' />
      </div>
    </div>
  </div>
</div>

{{! Review pin container - render exisiting reviews }}
<div class='pin_container'>
  {{#if reviews.length}}
    {{#each reviews as |product|}}

      <div class='card card_small'>

        <div id='pin_title{{product.id}}' data-brand='{{product.brand}}'></div>
        <div
          id='pin_product_type{{product.id}}'
          data-type='{{product.type}}'
        ></div>
        <div
          id='pin_product_price{{product.id}}'
          data-price='{{product.price}}'
        ></div>
        <div
          id='pin_description{{product.id}}'
          data-descr='{{product.description}}'
        ></div>

        <div class='pin_modal'>

          <div class='modal_foot'>

            <!-- Button trigger modal -->
            <button
              type='button'
              class='modal-read-more-btn'
              data-bs-toggle='modal'
              data-bs-target='#product-{{product.id}}'
            >
              See Review
            </button>

            <div class='destination'>

              <div class='pint_mock_icon_container'>
                <div>
                  <a href='{{product.link}}' target='_blank'><img
                      src='../assets/upper-right-arrow.png'
                      alt='destination'
                      class='pint_mock_icon'
                      id='pint_mock_icon'
                    />
                  </a>
                </div>
              </div>

            </div>
          </div>

          {{! Pin image }}
          <div class='pin_image'><img
              src='{{c_url}}'
              class='pin_max_width'
            /></div>

        </div>

      </div>
      {{! Review Pop Up }}
      <div
        class='modal fade'
        id='product-{{product.id}}'
        tabindex='-1'
        role='dialog'
        aria-labelledby='exampleModalCenterTitle'
        aria-hidden='true'
      >
        <div class='modal-dialog modal-dialog-centered' role='document'>
          <div class='modal-content text-center'>

            <div class='modal-header'>
              <h5
                class='modal-title'
                id='exampleModalLongTitle'
              >{{product.brand}}</h5>
            </div>

            <div class='modal-body'>

              <div class='modal-pin-image'>
                <img src='{{c_url}}' id='modal-pin-image' />
              </div>

              <div id='pin_description{{product.id}}'>
                <p class='modal-type'>{{product.type}}</p>
                <p class='modal-desc'>{{product.description}}</p>
                <p class='modal-price'>${{product.price}}</p>
              </div>

              <div class='modal-footer'>
                <button
                  type='button'
                  class='btn btn-secondary'
                  data-bs-dismiss='modal'
                >Close</button>
              </div>

            </div>

          </div>
        </div>

      </div>

    {{/each}}
  {{/if}}
</div>
{{! Add new pin modal }}
<div class='add_pin_modal'>

  <div class='add_pin_container'>

    <div class='d-flex text-center' id='left_side'>

      <div class='container'>
        <img id='uploadedimage' src='' alt='pin_image' />
        <input type='hidden' id='c_link' value='' />
        <div class='pt-4'>

          <div for='upload_img' id='upload_img_label'>
            <button id='upload_widget' class='cloudinary-button'>
              Upload files
            </button>
          </div>

        </div>
      </div>
    </div>

    <div class='side' id='right_side'>

      <div class='section2'>
        <input
          placeholder='Brand'
          type='text'
          class='new_pin_input'
          id='pin_title'
        />
        <input
          placeholder='Product Type'
          type='text'
          class='new_pin_input'
          id='pin_product_type'
        />
        <input
          placeholder='Description'
          type='text'
          class='new_pin_input'
          id='pin_description'
        />
        <input
          placeholder='Price (e.g. 14.99)'
          type='text'
          class='new_pin_input'
          id='pin_product_price'
        />
        <input
          placeholder='Add Product Link'
          type='text'
          class='new_pin_input'
          id='pin_destination'
        />
      </div>
      <div class='section1'>
        <div class='save_pin'>Save</div>
      </div>
    </div>

  </div>

</div>
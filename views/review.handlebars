<div id='homepage-reviews'>
  {{#if logged_in}}
    {{#each reviews as |product|}}
      <div class='homepage-reviews-content'>

        <img class='homepage-review-image' src='{{c_url}}' alt='review' />
        <div class='homepage-review-text'>
          <h2>
            <a href='/product/{{product.id}}'>{{product.brand}}</a>
          </h2>
          <p>{{type}}</p>
          <p>{{truncate_text description}}...</p>
          <p class='user mb-2'>-
            {{user.fname}}
            ({{format_date date_created}})</p>
          <a
            class='reviews-button my-2'
            href='/review/{{id}}'
            class='comment'
          ><button>Add a comment</button></a>
        </div>
      </div>
    {{/each}}
  {{/if}}
</div>